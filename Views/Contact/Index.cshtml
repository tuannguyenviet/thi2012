@model List<Partice.Models.Contact>
@{
    ViewBag.Title = "Contact";
   

}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Contact</h3>
                <br/>
                <a href="~/Contact/Create">New contact</a>
                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>ContactNumber</th>
                            <th>ContactName </th>
                            <th>GroupName</th>
                            <th>Hiredate</th>
                            <th>Birthday</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                     @foreach(var con in Model)
            {
                <tr>
                    <td>@con.Id</td>
                    <td>@con.ContactNumber</td>
                    <td>@con.ContactName</td>
                    <td>@con.GroupName</td>
                    <td>@con.HireDate</td>
                    <td>@con.BirthDay</td>
                    <td>
                        <a href="~/Contact/Edit/@con.Id">Edit</a>
                        <a onclick="return confirm('Are you sure?');" href="~/Contact/Delete/@con.Id" class="text-danger">Delete</a>
                    </td>
                </tr>
            }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>
